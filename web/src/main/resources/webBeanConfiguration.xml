<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <import resource="classpath:persistenceBeanConfiguration.xml"/>

    <bean id="authenticationService" class="pca.service.authentication.AuthenticationService">
        <property name="converter" ref="converter"/>
    </bean>
    <bean id="commentService" class="pca.service.comments.CommentService">
        <property name="converter" ref="converter"/>
    </bean>

    <bean id="problemService" class="pca.service.problems.ProblemService">
        <property name="converter" ref="converter"/>
    </bean>

    <bean id="converter" class="pca.service.Converter"></bean>

</beans>
