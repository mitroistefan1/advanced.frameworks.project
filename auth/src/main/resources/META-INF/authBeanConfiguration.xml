<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


     <bean id="authenticationService" class="pca.service.authentication.AuthenticationService">
          <property name="userDao" ref="userDao"/>
          <property name="converter" ref="converter"/>
      </bean>
      <bean id="userDao" class="pca.persistence.dao.UserDaoImpl"/>
      <bean id="converter" class="pca.service.authentication.Converter"/>

</beans>